<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileParentRelativeLayout"
        >

        <ImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:id="@+id/ivProfile"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="112dp"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tvUsername"
            android:hint="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@id/ivProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUsername"
            android:layout_centerHorizontal="true"
            android:layout_margin="36dp"
            android:id="@+id/profileMiddleRelativeLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/innerRel1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBioStatic"
                    android:text="Bio: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="The users bio goes here."
                    android:maxLines="8"
                    android:ellipsize="end"
                    android:layout_toRightOf="@id/tvBioStatic"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/innerRel2"
                android:layout_below="@id/innerRel1"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmailStatic"
                    android:text="Email: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserEmail"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="usersemail@gmail.com"
                    android:layout_toRightOf="@id/tvEmailStatic" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/innerRel3"
                android:layout_below="@id/innerRel2"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneStatic"
                    android:text="Phone: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="(000) 000-0000"
                    android:layout_toRightOf="@id/tvPhoneStatic" />
            </RelativeLayout>




        </RelativeLayout>
    </RelativeLayout>
</merge>